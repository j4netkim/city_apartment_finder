<!DOCTYPE html>
<html>
  <head>
    <title>CityApartmentFinder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
    <!--Import materialize.css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
      

            
  </head>


  <body class="homepage">
    <nav class="pink lighten-4">
      <div class="container">
        <%= link_to 'Home', current_owner.nil? ? '/' : owner_path(current_owner) %>
        <ul class="right">
          <% if logged_in? %>
            <li><a href="/log_out" %>Logout</a></li>
          <% else %>
            <li><a href="/signup">Sign Up</a></li>
            <li><a href="/log_in">Log In</a></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container">
      <%= render partial: 'partials/flash' %>
      <%= button_to("Google Log In", '/auth/google_oauth2') %>
    
      <%= yield %>
    </div>


    
    
    <!--JavaScript at end of body for optimized loading-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    
  </body>
</html>
